<?xml version="1.0" encoding="utf-8"?>
<!-- 设置邮箱布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@drawable/step2" />

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@drawable/home_head_bg"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_back"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/home_text_email"
            android:textColor="#333333"
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/setting_email_title"
        android:textColor="#333333"
        android:textSize="13dp" />

    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/selector_edittext"
            android:inputType="textEmailAddress"
            android:paddingBottom="0dp"
            android:paddingRight="85dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:textColor="#969696"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/emailSuffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="\@163.com"
            android:textColor="#65a134"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/setting_email_type"
            android:textColor="#888888"
            android:textSize="13dp" />

        <CheckBox android:id="@+id/type_163"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_check"
            android:text="\@163.com  "
            android:textColor="#888888"
            android:textSize="13dp"
            android:paddingLeft="22dp"
            android:checked="true"
             />

        <CheckBox android:id="@+id/type_126"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_check"
            android:text="\@126.com"
            android:textColor="#888888"
            android:textSize="13dp" 
             android:paddingLeft="22dp"
            />
        
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:orientation="horizontal" >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/setting_email_type"
            android:textColor="#888888"
            android:textSize="13dp" 
            android:visibility="invisible"
            />
         <CheckBox android:id="@+id/type_yeah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_check"
            android:text="\@yeah.net  "
            android:textColor="#888888"
            android:textSize="13dp" 
             android:paddingLeft="22dp"
            />
           <CheckBox android:id="@+id/type_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_check"
            android:text="\@qq.com"
            android:textColor="#888888"
            android:textSize="13dp" 
             android:paddingLeft="22dp"
             
            />
         
     </LinearLayout>
    
    
    
    <Button
        android:id="@+id/next"
        android:layout_width="102dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_complete" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/setting_email_desc"
        android:textColor="#888888"
        android:textSize="12dp" />

</LinearLayout>